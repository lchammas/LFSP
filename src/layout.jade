//- layout.jade
doctype html
html(lang='en')
  head
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:900,300', type='text/css')
    link(rel='stylesheet', href='../CSS/skeleton.css')
    link(rel='stylesheet', href='../CSS/main.css')
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(type='text/javascript', src='../js/app.js')
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js")
    meta(charset="UTF-8")
  
  title LFSP: The London Forum for Science Policy

    mixin sign-up
      form(action="//lfsp.us7.list-manage.com/subscribe/post?u=a8e8c7d9cb82ce5edf08160d2&amp;id=e5c600b959" method='post' id='mc-subscribe-form' name='mc-subscribe-form' class='validate' target='_blank' novalidate)
          .fieldview
            input#email(type='email', name='EMAIL', value='', class='email', placeholder='Enter your email' required)
            input#mc-subscribe(type='submit', value="sign me up", name='subscribe', class='button')


  body
    header#nav(class='header')
      ul
        li
          a(href='./index.html') HOME
        li
          a(href='./events.html') EVENTS
        li
          a(href='./policy.html') POLICY
        li
          a(href='./contact.html') CONTACT
        li
          a(href='./get_involved.html') GET INVOLVED
      img#logo(src="../img/LFSPTransLogo.png")

    block content